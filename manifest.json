{
  "manifest_version": 3,
  "name": "TingDown",
  "version": "1.0",
  "description": "将阿里通义听悟转录的文本转成markdown文件.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["popup.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}